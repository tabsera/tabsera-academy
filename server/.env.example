# Database
DATABASE_URL="postgresql://user:password@localhost:5432/tabsera_academy"

# JWT Secret
JWT_SECRET="your-secure-jwt-secret-change-in-production"
JWT_EXPIRES_IN="7d"

# Server
PORT=8000
NODE_ENV=development

# WaafiPay
# Sandbox: https://sandbox.waafipay.net/asm
# Production: https://api.waafipay.net/asm
WAAFIPAY_API_URL=https://sandbox.waafipay.net/asm
WAAFIPAY_MERCHANT_UID=your_merchant_uid
WAAFIPAY_API_USER_ID=your_api_user_id
WAAFIPAY_API_KEY=your_api_key
WAAFIPAY_HPP_KEY=your_hpp_key
WAAFIPAY_STORE_ID=your_store_id

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Email (AWS SES)
SMTP_HOST=email-smtp.eu-west-3.amazonaws.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
EMAIL_FROM=noreply@yourdomain.com

# Open edX Platform
EDX_BASE_URL=https://your-edx-platform.com
EDX_OAUTH_CLIENT_ID=your_client_id
EDX_OAUTH_CLIENT_SECRET=your_client_secret
EDX_ADMIN_USERNAME=admin
EDX_ADMIN_PASSWORD=your_edx_admin_password

# Google OAuth
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
